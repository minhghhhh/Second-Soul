@page "{id:int}"
@model Second_Soul.Pages.UserPage.Profile.OrderDetailModel
@{
    Layout = null;
    ViewData["Title"] = "Details";
}
<html><body>
<style>
    body {
        background: rgb(213, 217, 233);
        min-height: 100vh;
        display: flex;
        font-family: Muli, sans-serif;
        font-size: 14px;
    }

    .card {
        margin: auto;
        width: 320px;
        max-width: 600px;
        border-radius: 20px;
    }

    .mt-50 { margin-top: 50px; }
    .mb-50 { margin-bottom: 50px; }

    @media (max-width: 767px) {
        .card { width: 80%; }
    }

    @media (height: 1366px) {
        .card { width: 75%; }
    }

    #orderno { padding: 1vh 2vh 0; font-size: smaller; }
    .gap .col-2 { background-color: rgb(213, 217, 233); width: 1.2rem; padding: 1.2rem; margin-top: -2.5rem; border-radius: 1.2rem; }

    .title {
        text-align: center;
        font-size: 2rem;
        font-weight: bold;
        padding: 12%;
    }

    .main { padding: 0 2rem; }
    .main img { border-radius: 7px; width: 90px; height: 90px; }
    .main p { margin-bottom: 0; font-size: 0.75rem; }

    #sub-title p { margin: 1vh 0 2vh 0; font-size: 1rem; }

    .row-main {
        padding: 1.5vh 0;
        align-items: center;
    }

    hr {
        margin: 1rem -1vh;
        border-top: 1px solid rgb(214, 214, 214);
    }

    .total { font-size: 1rem; }

    .btn {
        background-color: rgb(3, 122, 219);
        border-color: rgb(3, 122, 219);
        color: white;
        margin: 7vh 0;
        border-radius: 7px;
        width: 60%;
        font-size: 0.8rem;
        padding: 0.8rem;
        text-align: center;
    }

    .btn:focus,
    .btn:hover {
        color: white;
        box-shadow: none;
        outline: none;
        transition: none;
    }
</style>
<div class="card mt-50 mb-50">
    <div class="col d-flex">
        <span class="text-muted" id="orderno">Order #@Model.Order.OrderID</span>
    </div>
    <div class="gap">
        <div class="col-2 d-flex mx-auto"></div>
    </div>
    <div class="title mx-auto">Here's your order!</div>
    <div class="main">
        <span id="sub-title">
            <p><b>Order Summary</b></p>
        </span>
        @foreach (var item in Model.Details)
        {
            <div class="row row-main">
                <div class="col-3">
                    <img class="img-fluid" src="@item.Product.MainImage" alt="@item.Product.Name">
                </div>
                <div class="col-6">
                    <div class="row d-flex">
                        <p><b>@item.Product.Name</b></p>
                    </div>
                    <div class="row d-flex">
                        <p class="text-muted">@item.Product.Size</p>
                    </div>
                    <div class="row d-flex">
                        <p class="text-muted">@item.Product.Condition</p>
                    </div>
                </div>
                <div class="col-3 d-flex justify-content-end">
                    <p><b>@item.Price.ToString("N0") VND</b></p>
                </div>
            </div>
        }
        <hr>
        <div class="total">
            <div class="row">
                <div class="col"><b>Shipping:</b></div>
                <div class="col d-flex justify-content-end">30,000 VND</div>
            </div>
            <div class="row">
                <div class="col"><b>Total:</b></div>
                <div class="col d-flex justify-content-end"><b>@Model.Order.TotalAmount.ToString("N0") VND</b></div>
            </div>
            <button class="btn d-flex mx-auto">Track your order</button>
        </div>
    </div>
</div>
</body></html>