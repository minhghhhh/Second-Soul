<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-md-6">
                <div class="contact__text">
                    <div class="section-title">
                        <span>Information</span>
                        <h2>Contact Us</h2>
                        <p>
                            Thank you for visiting our website! If you have any questions, feedback, or need assistance, please don’t hesitate to reach out to us. Whether you're inquiring about our services, seeking support, or sharing suggestions, our team is here to provide the answers you need.
                        </p>
                    </div>
                    <ul>
                        <li>
                            <h4>Viet Nam</h4>
                            <p>
                                Lô E2a-7, Đường D1, Đ. D1, Long Thạnh Mỹ, Thành Phố Thủ Đức, Hồ Chí Minh 700000
                                <br />+84 822538888
                            </p>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="col-lg-6 col-md-6">
                <div class="contact__form">
                    <form method="post">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" placeholder="Name" id="name" value="@Model.User1?.FullName">
                            </div>
                            <div class="col-lg-6">
                                <input type="text" placeholder="Email" id="email" value="@Model.User1?.FullName">
                            </div>
                            <div class="col-lg-12">
                                <textarea placeholder="Message" id="message"></textarea>
                                <button type="submit" class="site-btn">Send Message</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
